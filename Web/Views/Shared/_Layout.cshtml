<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="icon" href="/favicon.ico?v=2" />

    <!-- Material Design fonts -->
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Roboto:300,400,500,700">
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/icon?family=Material+Icons">
    <!-- Bootstrap Material Design -->
    <link rel="stylesheet" type="text/css" href="~/Content/materialdesign/css/bootstrap-material-design.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/materialdesign/css/ripples.min.css">

     <link rel="stylesheet" href="~/Content/datetimepicker/css/bootstrap-material-datetimepicker.css">


</head>
<body>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="~/Scripts/moment-with-locales.js"></script>
    <script type="text/javascript" src="~/Content/datetimepicker/js/bootstrap-material-datetimepicker.js"></script>
    <script src="~/Content/maskmoney/jquery.maskMoney.min.js"></script>

    <div class="navbar navbar-inverse navbar-fixed-top" id="navbar">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                    @Html.ActionLink("Expenses Toptal", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" id="barDivExpenses" style="display: none;">
                    <li><a href="#" id="barExpensesLink" data-toggle="collapse" data-target=".navbar-collapse">Expenses</a></li>
                </ul>
                <ul class="nav navbar-nav" id="barDivUser" style="display: none;">
                    <li><a href="#" id="barUsersLink" data-toggle="collapse" data-target=".navbar-collapse">Users</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right" style="@(User.Identity.IsAuthenticated? "display: none;":"")"  id="barDivLogin">
                    <li><a href="#" id="barRegisterLink" data-toggle="collapse" data-target=".navbar-collapse">Register</a></li>
                    <li><a href="#" id="barLoginLink" data-toggle="collapse" data-target=".navbar-collapse">Log in</a></li>
                </ul>

                <ul class="nav navbar-nav navbar-right" style="@(!User.Identity.IsAuthenticated? "display: none;":"")" id="barDivLogout">
                    <li><a href="#" id="barUserNameLink" data-toggle="collapse" data-target=".navbar-collapse">@User.Identity.Name</a></li>
                    <li><a href="#" id="barLogoffLink" data-toggle="collapse" data-target=".navbar-collapse">Log off</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        
        <footer id="footer">
            <hr />
            <p>&copy; @DateTime.Now.Year - Tiago Chilanti - @Html.ActionLink("API Doc", "Index", "Help", new { area = "" }, null)</p>
        </footer>
    </div>
</body>
</html>